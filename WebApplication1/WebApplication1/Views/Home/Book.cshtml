
@{
    ViewBag.Title = "Book";
}
<div ng-app="fotf" ng-controller="BookDetailCtrl" bookid="@ViewBag.Id" ng-cloak>
    <div class="row">
        <div class="col-md-2">
            <div>
                <img ng-src="{{book.ImgUrl}}" style="width: 171px" />
            </div>
        </div>
        <div class="col-md-9">
            <div class="caption">
                <h3>{{book.Title}}</h3>
                <p>{{book.Summary}}</p>
            </div>
            
            <ul class="list-group" >
                <li class="list-group-item" ng-repeat="blurb in book.Blurbs">
                    <h4 class="list-group-item-heading">{{blurb.Title}}</h4>
                    <p class="list-group-item-text">{{blurb.Summary}}</p>
                </li>
            </ul>

        </div>
    </div>
</div>