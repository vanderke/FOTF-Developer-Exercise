<section class="l-container">
  <div id="user">
    <div class="fieldset">
      <h1>
        Chapter <%= @lesson.chapter %>
      </h1>
      <p>
        Title: <%= @lesson.title %>
      </p>
      <p>
        Summary: <%= @lesson.summary %>
      </p>
      <h2>Reviews</h2>
      <p>
        <%= link_to pluralize(@lesson.reviews.size, "review"), lesson_reviews_path(@lesson) %>
      </p>
    </div>
    <div>
      <% if current_user_admin? %>
        <nav>
          <%= link_to 'Edit Lesson', edit_lesson_path(@lesson), class: 'button' %>
          <%= link_to 'Delete Lesson', @lesson, method: :delete,
          data: { confirm: "Are you sure you want to permanently delete your account?"},
          class: 'button' %>
        </nav>
      <% end %>
    </div>
  </div>
</section>
