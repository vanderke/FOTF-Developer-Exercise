<% if logged_in? %>
	<p>Welcome <%= @name %>!</p>
	<%= link_to "Log out", logout_path, method: :delete %>
<% else %>
	<%= form_for(:session, url: login_path, html: {:class => 'form-inline'}) do |f| %>
	<div class="form-group"><%= f.email_field :email, class: "form-control", placeholder: "Email" %></div><div class="form-group"><%= f.password_field :password, class: "form-control", placeholder: "Password" %></div><div class="form-group"><%= f.submit "Log in", class: "btn btn-default" %></div><%= link_to "Register", new_user_path, method: :get %>
	<% end %>
<% end %>
<% flash.each do |message_type, message| %>
	<div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>