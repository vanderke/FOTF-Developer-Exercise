<section class="l-container">
  <div id="user">
    <div class="fieldset">
      <h1>
        <%= @user.username %>
      </h1>
      <h3>Member Since</h3>
      <p>
        <%= member_since_format(@user)%>
      </p>
      <h2>
        <%= mail_to(@user.email) %>
      </h2>
    </div>
    <div>
        <nav>
          <% if current_user?(@user) %>
            <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
            <%= link_to 'Delete Account', @user, method: :delete,
            data: { confirm: "Are you sure you want to permanently delete your account?"},
            class: 'button' %>
          <% end %>
        </nav>
    </div>
  </div>
</section>
